{
  "name": "jgd-vscode",
  "displayName": "jgd - R Plot Viewer",
  "description": "Renders R graphics from the jgd device in a VS Code webview",
  "version": "0.0.1",
  "publisher": "jgd",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Visualization"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "jgd.showPlotPane", "title": "jgd: Show Plot Pane" },
      { "command": "jgd.previousPlot", "title": "jgd: Previous Plot" },
      { "command": "jgd.nextPlot", "title": "jgd: Next Plot" },
      { "command": "jgd.clearHistory", "title": "jgd: Clear Plot History" },
      { "command": "jgd.exportPng", "title": "jgd: Export as PNG" },
      { "command": "jgd.exportSvg", "title": "jgd: Export as SVG" },
      { "command": "jgd.exportPdf", "title": "jgd: Export as PDF" }
    ],
    "keybindings": [
      { "command": "jgd.previousPlot", "key": "alt+left", "when": "jgd.hasPlots" },
      { "command": "jgd.nextPlot", "key": "alt+right", "when": "jgd.hasPlots" }
    ],
    "configuration": {
      "title": "jgd",
      "properties": {
        "jgd.historyLimit": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of plots to retain in history per session"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
